<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.tsquare.speakfriend.user.UserController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" prefWidth="600" prefHeight="400">

    <Text styleClass="title" text="Speak friend and enter."
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="User:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="username"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Pass:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="password"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Sign In"
                onAction="#loginAction"/>
    </HBox>

    <HBox spacing="10" alignment="bottom_left"
    GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Hyperlink text="Create New User" onAction="#registerView" />
    </HBox>

    <Text fx:id="errorMessage"
          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <stylesheets>
        <URL value="@css/materialfx.css" />
        <URL value="@css/entry.css" />
    </stylesheets>
</GridPane>