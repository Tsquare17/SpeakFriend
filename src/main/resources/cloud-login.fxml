<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" stylesheets="@css/materialfx.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tsquare.speakfriend.cloud.LoginController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" text="Log in for Cloud Functionality" textAlignment="CENTER" textFill="#e1e1e1" />
        <GridPane alignment="CENTER" hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0" prefWidth="126.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="259.0" minWidth="10.0" prefWidth="244.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <TextField fx:id="email" onKeyPressed="#submitAction" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label alignment="CENTER" contentDisplay="CENTER" text="Email:" textAlignment="CENTER" textFill="#e1e1e1" GridPane.halignment="LEFT" GridPane.rowIndex="0" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Fira Code Medium" size="13.0" />
                    </font>
                </Label>
                <PasswordField fx:id="password" onKeyPressed="#submitAction" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="136.0" text="Confirm Pass:" textAlignment="CENTER" textFill="#e1e1e1" GridPane.halignment="LEFT" GridPane.rowIndex="1">
                    <font>
                        <Font name="Fira Code Medium" size="13.0" />
                    </font>
                </Label>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loginAction" text="Submit" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <Button accessibleText="Back" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#goBackAction" style="-fx-background-color: red; -fx-text-fill: white;" text="Back" textAlignment="CENTER" textFill="WHITE" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <Text fx:id="notice_text" fill="#ff6161" textAlignment="CENTER" textOrigin="CENTER">
            <effect>
                <Glow />
            </effect>
        </Text>
    </children>
    <padding>
        <Insets bottom="40.0" top="20.0" />
    </padding>
</VBox>
