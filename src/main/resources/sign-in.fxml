<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.effect.Glow?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" stylesheets="@css/materialfx.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tsquare.speakfriend.user.UserController">
<children>
    <Label alignment="CENTER" contentDisplay="CENTER" text="Speak friend and enter." textAlignment="CENTER" textFill="#e1e1e1" />
    <GridPane alignment="CENTER" hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0" prefWidth="126.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="259.0" minWidth="10.0" prefWidth="244.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <children>

            <Label accessibleText="User" text="User:" textFill="#e1e1e1" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font>
                    <Font name="Fira Code Medium" size="13.0" />
                </font>
            </Label>

            <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label accessibleText="Password" text="Pass:" textFill="#e1e1e1" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font name="Fira Code Medium" size="13.0" />
                </font>
            </Label>

            <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <Button text="Sign In" onAction="#loginAction"/>
            </HBox>

            <HBox spacing="10" alignment="bottom_left"
                  GridPane.columnIndex="1" GridPane.rowIndex="8">
                <Hyperlink text="Create New User" onAction="#registerView" />
            </HBox>

        </children>
    </GridPane>
    <Text fx:id="errorMessage" fill="#ff6161" textAlignment="CENTER" textOrigin="CENTER">
        <effect>
            <Glow />
        </effect>
    </Text>
</children>
<padding>
    <Insets bottom="40.0" top="20.0" />
</padding>
</VBox>
