            </Label>
            <TextField fx:id="account_name" prefWidth="180.0" GridPane.columnIndex="1" GridPane.columnSpan="2">
               <GridPane.margin>
                  <Insets right="30.0" />
               </GridPane.margin></TextField>
            <Label layoutX="62.0" layoutY="69.0" text="Password" textAlignment="CENTER" textFill="WHITE" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER">
