<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox id="accountListContainer" fx:id="account_list_container" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" stylesheets="@css/materialfx.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tsquare.speakfriend.account.ImportController">
    <padding>
        <Insets top="20.0" />
    </padding>
    <children>
        <Label text="Import Accounts" />

        <VBox fx:id="decryption_key_container" maxWidth="400.0" prefWidth="400.0">
            <Label fx:id="decryption_label" text="Password" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <PasswordField fx:id="decryption_key" onKeyTyped="#handleKeyAction" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </VBox>


        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" />
            </padding>
            <children>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#toAccounts" style="-fx-background-color: red; -fx-text-fill: white;" text="Cancel" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                <Button fx:id="import_button" disable="true" mnemonicParsing="false" onAction="#selectAction" text="Select File" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            </children>
        </GridPane>
        <AnchorPane fx:id="account_anchor" VBox.vgrow="ALWAYS">
            <children>
                <ScrollPane fx:id="account_list_scrollpane" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>
        <HBox alignment="BOTTOM_CENTER" prefHeight="60.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <children>
                        <Text fx:id="notice_text" fill="#ff6161" textOrigin="CENTER">
                            <effect>
                                <Glow />
                            </effect>
                        </Text>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
